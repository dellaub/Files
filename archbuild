
"install arch"			> usb as root
"base system" 			> usb as root
"timezone"    			> usb as root
"create user"			> usb as root
"passwords"				> usb as root
"Display server"		> usb as root
"Desktop environment"	> usb as root
"unmount"
"reboot"
"applications install" 	> archlinux as user





#################
## BASE SYSTEM ##
#################
"[[[[ USB live arch ]]]]"

	base 
	base-devel
	linux
	linux-firmware
	linux-lts
	linux-lts-headers
	#	pacstrap /mnt base base-devel linux linux-lts linux-firmware linux-lts-headers 	

"[[[[ arch-chroot /mnt ]]]]"	
	
	grub
		# download grub
			pacman -S grub
		# install grub
			grub-install --target=i386-pc /dev/sda
		# make grub config file
			grub-mkconfig -o /boot/grub/grub.cfg
		
	# man-db
	# neovim
	# util-linux
	# networkmanager
		pacman -S --noconfirm --needed man-db networkmanager neovim util-linux
				
				# enable networkmanager	(autostart every login)
					systemctl enable NetworkManager

 	#ADD LOW PRIVILEGED USER
		# add non root user
			useradd -m -g wheel username
		# enable password
			passwd username
		# enable user to use sudo commands
			#uncomment line 82
				vim /etc/sudoers
					#login
						user=admin
						pass=admin
			

		# exit back to usb
			exit
	
"[[[[ USB live arch ]]]]"

	# UNMONT SYSTEM FROM the USB 
		# unmount /mnt from the installer 
			umount -R /mnt

"[[[[ REBOOT ]]]]"

	reboot

"[[[[ IN THE SYSTEM ]]]]"
	
	# zsh		
	# zsh-autosuggestions	 	
	# zsh-completions	 	
	# zsh-syntax-highlighting
		pacman -S --noconfirm --needed zsh zsh-autosuggestions zsh-completions zsh-syntax-highlighting

##############################
## GRAPHICAL USER INTERFACE ##
##############################

	# xorg-server
	# xorg-init
		pacman -S --noconfirm --needed xorg-server xorg-init

	# xf86-video-ati or [ virtualbox-guest-utils ]
	# mesa
		pacman -S --noconfirm --needed xf86-video-ati mesa
	
	# rxvt-unicode
		pacman -S --noconfirm --needed rxvt-unicode

#########################
## DESKTOP ENVIRONMENT ##
#########################

	# i3-gaps
	# i3status
	# i3blocks
		pacman -S --noconfirm --needed i3-gaps i3blocks i3status

	# rofi
		pacman -S --noconfirm --needed rofi
	
	# ttf-font-awesome
	# ttf-bitstream-vera
		pacman -S --noconfirm --needed ttf-bitstream-vera ttf-font-awesome

	# specify the window manager in .xinitrc
				vim /home/user/.config/xorg-X11/xinitrc
				add: 'exec i3'
	# start i3
		startx			

